#include<iostream>
#include<stdlib.h>
using namespace std;

bool *p = new bool[9]; //To check if entry is filled
int *content = new int[9];
int win[8][3]={{0,1,2},{3,4,5},{6,7,8},{0,3,6},{1,4,7},{2,5,8},{0,4,8},{2,4,6}};
int t;
int f;
int result;
int choice;

class Game{
public:
    void reload(){
        t=1;
        f=0;
        result=0;
        for(int i=0;i<9;i++){
            p[i]=false;
            content[i]=i+1;
        }
        cout<<"Tic - Tac Toe\nEnter\n1 - Kid mode\n2 - Men mode\n3 - Legend mode\n4 - God mode"<<endl;
        cin>>choice;
        update();
    }

    void update(){
        int ch;
        while(1){
            printing();
            if(checkForWinner(content)==0)
            { if(t%2!=0)
                {   cout<<"\n\n\n"<<"Please enter the number (from 1-9) where you want to enter X"<<" : ";
                    cin>>ch;
                    if(!(ch>=1 || ch<=9))
                    {
                        cout<<"\nPlease enter a valid choice.Press any key to TRY AGAIN and press enter : ";
                        char trial;
                        cin>>trial;
                        continue;
                    }
                }
            }
            else {
                if(result==88){cout<<"\n\n"<<"X has WON...!!";}
                else if(result==79){cout<<"\n\n"<<"O has WON...!!";}
                break;
            }

            if(t%2!=0){                                                          
                if(p[ch-1]==true){                                    //If user enters in already filled place
                    char trial;
                    cout<<"\n\n Press any key to TRY AGAIN and press enter : ";
                    cin>>trial;
                    continue;
                }
            }

            if(t%2==0){
                int aimove;
                if(choice==1){                                         //KID MODE
                    int v = rand() % 100 + 1;
                    if(v<50){
                        aimove=random(p);
                    }
                    else{
                        aimove=ai(content,p);
                    }
                }
                else if(choice==2){                                        //MEN MODE
                    int v = rand() % 100 + 1;
                    if(v<35){
                        aimove=random(p);
                    }
                    else{
                        aimove=ai(content,p);
                    }
                }
                else if(choice==3){                                        //LEGEND MODE
                    int v = rand() % 100 + 1;
                    if(v<20){
                        aimove=random(p);
                    }
                    else{
                        aimove=ai(content,p);
                    }
                }
                else if(choice==4){                                        //GOD MODE
                        aimove=ai(content,p);
                }
                p[aimove]=true;
                content[aimove]=79;
                t++;
                f++;
            }
            else{
                p[ch-1]=true;
                content[ch-1]=88;
                t++;
                f++;
            }

            if(checkForWinner(content)!=0){
                printing();
                if(result==88){cout<<"\n\n"<<"X has WON...!!";}
                else if(result==79){cout<<"\n\n"<<"O has WON...!!";}
                break;
            }

            if(availability()){
                break;
            }
        }
        playAgain();
    }

    int availability(){
        if(f==9){
            printing();
            cout<<"\n\nGame Over...!!";
            return 1;
        }
        else{
            return 0;
        }
    }

    int checkForWinner(int content[9]){
        result=0;
        for(int a=0;a<8;a++){
            if(content[win[a][0]]==88&&content[win[a][1]]==88&&content[win[a][2]]==88){
                result=88;
            }
            if(content[win[a][0]]==79&&content[win[a][1]]==79&&content[win[a][2]]==79){
                result=79;
            }
        }
        return result;
    }

    void playAgain(){
        char conf;
        cout<<"\n\nWanna Play Again ?y/n  :   ";
        cin>>conf;
        if(conf=='y'){reload();}
        else{cout<<"BYE...!!";}
    }

    int printing(){
        system("cls");
        switch(choice){
            case 1:
                cout<<"------------------------Kid Mode-------------------------------\n"<<endl;
                break;
            case 2:
                cout<<"------------------------Men Mode-------------------------------\n"<<endl;
                break;
            case 3:
                cout<<"------------------------Legend Mode-------------------------------\n"<<endl;
                break;
            case 4:
                cout<<"------------------------God Mode-------------------------------\n"<<endl;
                break;
        }
        for(int i=0;i<9;i++){
            if(i==3||i==6){cout<<"\n\n";}
            if(content[i]==88)
            cout<<"\t"<<"X";
            else if(content[i]==79)
            cout<<"\t"<<"O";
            else
            cout<<"\t"<<content[i];
        }
    }

    int ai(int mat[9],bool p[9]){
        int pc=79,pl=88,sc=0, b=-9999,optimi=0;

        for(int i=0;i<9;i++){
            if(p[i]==false){
                p[i]=true;
                mat[i]=pc;
                sc=-(negmax(mat, p, pl, pc));
                p[i]=false;
                mat[i]=i+1;
                if(sc>b){
                    b=sc;
                    optimi=i;
                }
            }
        }
        return optimi;
    }

    int negmax(int m[9], bool p[9],int pl1,int pl2){
        int b = -9999;
    	int sc = 0;

    	if (checkForWinner(m) == pl1)
    		return 1000;
    	else if (checkForWinner(m) == pl2) 
    		return -1000;

    	for (int i = 0; i < 9; i++) {
    		if (p[i] == false) {
                p[i]=true;
                m[i] = pl1;
    		sc = -(negmax(m, p, pl2, pl1));
   		p[i]=false;
                m[i]=i+1;
  		if (sc >= b) 
   		 b= sc;
    			
    		}
    	}

    	if (b == -9999 || b == 0)
    		return 0;

    	else if (b < 0)
    		return b + 1;

    	else if (b> 0)
    		return b - 1;
    }

    int random(bool p[9]){
        int c=0,val,i;
        for(i=0;i<9;i++)
            if(p[i]==false)
            c++;

        val=rand() % c + 1;
        c=0;
        for(i=0;i<9;i++){
            if(p[i]==false)c++;
            if(c==val)break;
        }
        return i;
    }
};

int main(){
    Game gamer;
    gamer.reload();
}
